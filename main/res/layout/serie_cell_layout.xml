<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/crv_serie"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Nombre"
            android:textAlignment="gravity"
            android:textSize="@dimen/tam_letter_song" />

        <TextView
            android:id="@+id/txv_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txv_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txv_name"
            android:layout_below="@+id/txv_name"
            android:text="Creador"
            android:textSize="@dimen/tam_letter_song"
            android:textAlignment="gravity"/>

        <TextView
            android:id="@+id/txv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txv_creator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txv_creator"
            android:layout_below="@id/txv_creator"
            android:text="Género"
            android:textSize="@dimen/tam_letter_song"
            android:textAlignment="gravity"/>

        <TextView
            android:id="@+id/txv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txv_creator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txv_creator"
            android:layout_below="@id/txv_gender"
            android:text="@string/year"
            android:textSize="@dimen/tam_letter_song"
            android:textAlignment="gravity"/>

        <TextView
            android:id="@+id/txv_chapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txv_creator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txv_creator"
            android:layout_below="@id/txv_year"
            android:text="Capitulos"
            android:textSize="@dimen/tam_letter_song"
            android:textAlignment="gravity"/>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txv_chapters"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/folder" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_edit"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp"
            android:src="@drawable/delete" />
    </RelativeLayout>
</android.support.v7.widget.CardView>